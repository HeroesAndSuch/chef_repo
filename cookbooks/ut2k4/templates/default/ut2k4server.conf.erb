# ut2k4server

description "ut2k4server server"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

reload signal SIGUSR1

chdir /home/<%= node[:ut2k4][:server][:service_user] %>/<%= node[:ut2k4][:server][:dir] %>/System

exec su -c './ucc-bin server <%= node[:ut2k4][:server][:default_map] %>?game=<%= node[:ut2k4][:server][:default_type] %> ini=ut2k4-server.ini -nohomedir' <%= node[:ut2k4][:server][:service_user] %>
